<%- include('../includes/main.ejs') %>

    <main class="order">
        <h1><%= product.name  %></h1>
        <hr>
        <div>
            <img src="<%= product.imgUrl  %>" alt="<%= product.name  %>">
        </div>
        <h2><%= product.price  %></h2>
        <p><%= product.desc  %></p>
        <form action="/cart" method="POST">
            <button class="btn" type="submit">Add to Cart</button>
            <input type="hidden" name="productId" value="<%= product.id %>">
        </form>
    </main>
</body>
</html>