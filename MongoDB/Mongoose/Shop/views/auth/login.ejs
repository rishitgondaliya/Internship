<%- include('../includes/main.ejs') %>
    <main>
      <form action="/login" method="POST" class="form-control" novalidate>
        <div class="login-form">
            <h2 style="text-align: center;">Login</h2>
            <% if(errorMsg) { %>
              <div class="flash-error">
                <%= errorMsg %>
              </div>
            <% } %>
            <div class="inner-grp2">
              <label for="email">E-mail:</label>
              <input 
                class="<%= validationResult.find(e => e.path === 'email') ? 'invalid' : '' %>" 
                type="email" 
                id="email" 
                name="email" 
                placeholder="enter your email here"
                value="<%= oldInput.email || '' %>" 
              />
          </div>
          <div class="inner-grp2">
              <label for="pass">Password:</label>
              <input 
                class="<%= validationResult.find(e => e.path === 'password') ? 'invalid' : '' %>" 
                type="password" 
                id="pass" 
                name="password" 
                value="<%= oldInput.password || '' %>" 
              >
          </div>
          </div>
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
          <button class="btn login" type="submit">Login</button>
          <p class="login-bottom"><a href="/reset">Forgot password?</a> <br><br>Don't have any account? <a href="/signup">Sign up</a></p>
      </form>
    </main>
  </body>
</html>