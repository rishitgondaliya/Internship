<%- include('../includes/main.ejs') %>
    <main>
      <form action="/reset" method="POST" class="form-control">
        <div class="login-form">
            <h2 style="text-align: center;">Reset Password</h2>
            <% if(errorMsg) { %>
              <div class="flash-error">
                <%= errorMsg %>
              </div>
            <% } %>
            <div class="inner-grp2">
                <label for="email">E-mail:</label>
                <input type="email" id="email" name="email" value="<%= oldInput.email || '' %>"/>
            </div>
            <div>
                <p style="margin-left: 0.75rem;">A password reset link will be sent to this email.</p>
            </div>
        </div>
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <button class="btn login" type="submit">Send</button>
        <p class="login-bottom">Create a new account? <a href="/signup">Sign up</a></p>
      </form>
    </main>
  </body>
</html>